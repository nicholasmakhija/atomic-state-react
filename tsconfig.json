{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "emitDeclarationOnly": true,
    "noEmitOnError": true,
    "lib": ["es2017", "dom"],
    "esModuleInterop": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "lib", "cjs", "esm", "umd"]
}
